{
  "name": "@karmaniverous/npm-template",
  "version": "0.2.0",
  "description": "An ES6 NPM package project template featuring mocha/chai test support and a CLI.",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "build": "rimraf ./lib && babel src -d lib",
    "release": "dotenv -c development -- release-it",
    "test": "mocha './{,!(node_modules)/**}/*.test.*js*'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karmaniverous/npm-template"
  },
  "keywords": [],
  "author": "Jason G. Williscroft",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/karmaniverous/npm-template/issues"
  },
  "homepage": "https://github.com/karmaniverous/npm-template#readme",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "@types/node": "^18.11.15",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-extension": "^0.1.3",
    "chai": "^4.3.7",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-mocha": "^10.1.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2"
  },
  "mocha": {
    "require": [
      "@babel/register"
    ],
    "spec": "./{,!(node_modules)/**}/*.test.*js*"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "dependencies": {
    "commander": "^9.4.1",
    "lodash": "^4.17.21"
  }
}
